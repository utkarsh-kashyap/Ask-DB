# Oracle DB connection
ORACLE_USER=demo_user
ORACLE_PASSWORD=demo_password
# You can provide an Easy Connect DSN or build via ORACLE_HOST/PORT/SERVICE
ORACLE_DSN=localhost:1521/XEPDB1
# ORACLE_HOST=localhost
# ORACLE_PORT=1521
# ORACLE_SERVICE=XEPDB1

# Schema extraction options
SCHEMA_OWNER=DEMO_USER
SCHEMA_TABLES=MEMBERS,ACCOUNTS,TRANSACTIONS    # optional; comma-separated table names (case-insensitive)
SCHEMA_TABLE_PREFIX=                           # optional: extract only tables starting with this prefix
SCHEMA_MAX_TABLES=50                           # optional: limit number of tables to extract for prod DBs

# LLM / API credentials (change these for local OpenAI or company LLM)
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_API_KEY=xxxxxxxxx
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=1024

# Placeholders used in config.json (fill with real table names if different)
# MEMBERS_TABLE=MEMBERS
# ACCOUNTS_TABLE=ACCOUNTS

# Output
OUTPUT_DIR=./output
